{% extends 'base.html.twig' %}

{% block title %}TaskLinker{% endblock %}

{% block body %}


<main>
    <header>
        <div id="current-user"></div>
        <div id="title-page">
            <h1>Projets</h1>
        </div>
    </header>
        <div id="content">
            <div id="projects-container">
            {% for project in projects  %}
                <article class="card-project">
                    <a href={{ url("project.show", { id: project.id})}}>
                        <h2>{{project.title}}</h2>
                    </a>
                </article>
            {% endfor %}
                <article class="card-project">
                    <a href={{ url("project.create")}}>
                        <h2>Ajouter un projet</h2>
                    </a>
                </article>
            </div>
        </div>
    </main>
{% endblock %}
