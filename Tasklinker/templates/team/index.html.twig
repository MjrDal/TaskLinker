{% extends 'base.html.twig' %}


{% block body %}
<div id="main-container">
        <main>
            <header>
            <div id="current-user"></div>
            <div id="title-page">
                <h1>Équipe</h1>
            </div>
            </header>
            <div id="content">
            <table id="team-container">
                <thead>
                    <tr>
                        <th>Prénom, Nom</th>
                        <th>Statut</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for person in team  %}
                <tr>
                    <td>
                        <div class="employee-infos">
                            <div class="employee-avatar">
                                {{ person.firstName|slice(0, 1) ~ person.lastName|slice(0, 1) }}
                            </div>
                            <div class="employee-coords">
                                <strong>{{person.firstName}} {{person.lastName}}</strong>
                                <span>{{person.email}}</span>
                            </div>
                        </div>
                        </td>
                        <td>{{person.status}}</td>
                        <td>
                        <a class="button button-edit-team" href={{ url("team.show", { id: person.id})}}>
                        Éditer
                        </a>
                        <a class="delete-team" href="#">
                        Supprimer
                        </a>
                    </td>
                </tr>
                {% endfor %}

                </tbody>
            </table>
        </div>
        </main>
    </div>
{% endblock %}